{
  "name": "@foadonis/maintenance",
  "description": "Put your Adonis application in maintenance mode",
  "version": "0.1.0",
  "engines": {
    "node": ">=20.6.0"
  },
  "type": "module",
  "files": [
    "build",
    "!build/bin",
    "!build/tests"
  ],
  "exports": {
    ".": "./build/index.js",
    "./commands": "./build/commands/main.js",
    "./maintenance_provider": "./build/providers/maintenance_provider.js",
    "./services/main": "./build/services/main.js",
    "./types": "./build/src/types.js",
    "./maintenance_middleware": "./build/src/middlewares/maintenance_middleware.js"
  },
  "scripts": {
    "clean": "del-cli build",
    "copy:templates": "copyfiles \"stubs/**/*.stub\" build",
    "index:commands": "adonis-kit index build/commands",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "format": "prettier --write .",
    "quick:test": "node --import=./tsnode.esm.js --enable-source-maps bin/test.ts",
    "test": "c8 yarn quick:test",
    "build": "yarn clean && tsc && yarn copy:templates && yarn index:commands",
    "dev": "tsc --watch",
    "version": "yarn build"
  },
  "keywords": [
    "adonis",
    "adonisjs",
    "maintenance"
  ],
  "author": {
    "name": "Martin Paucot",
    "email": "contact@martin-paucot.fr"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/FriendsOfAdonis/FriendsOfAdonis",
    "directory": "packages/maintenance"
  },
  "bugs": {
    "url": "https://github.com/FriendsOfAdonis/FriendsOfAdonis/issues"
  },
  "homepage": "https://friendsofadonis.com/docs/maintenance",
  "license": "MIT",
  "devDependencies": {
    "@adonisjs/assembler": "catalog:",
    "@adonisjs/cache": "catalog:",
    "@adonisjs/core": "catalog:",
    "@adonisjs/lucid": "catalog:",
    "@foadonis/eslint-config": "workspace:*",
    "@japa/assert": "^4.2.0",
    "@japa/expect-type": "^2.0.4",
    "@japa/file-system": "^3.0.0",
    "@japa/runner": "^4.0.0",
    "@swc/core": "1.15.5",
    "@types/node": "^25.0.2",
    "c8": "^10.1.3",
    "copyfiles": "^2.4.1",
    "del-cli": "^7.0.0",
    "edge.js": "^6.4.0",
    "eslint": "catalog:",
    "prettier": "^3.7.4",
    "reflect-metadata": "^0.2.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "youch": "catalog:"
  },
  "peerDependencies": {
    "@adonisjs/core": "^6.2.0 || ^7.0.0-next.19"
  },
  "optionalDependencies": {
    "@adonisjs/cache": "1.3.0",
    "edge.js": "^6.4.0"
  },
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "c8": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  }
}
