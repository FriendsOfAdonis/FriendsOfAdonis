{
  "name": "@foadonis/openapi",
  "description": "Generate OpenAPI specifications on Adonis",
  "version": "0.2.0",
  "engines": {
    "node": ">=20.6.0"
  },
  "type": "module",
  "files": [
    "build",
    "!build/bin",
    "!build/tests"
  ],
  "exports": {
    ".": "./build/index.js",
    "./commands": "./build/commands/main.js",
    "./openapi_provider": "./build/providers/openapi_provider.js",
    "./services/main": "./build/services/main.js",
    "./types": "./build/src/types.js",
    "./decorators": "./build/src/decorators.js"
  },
  "scripts": {
    "clean": "del-cli build",
    "copy:templates": "copyfiles \"stubs/**/*.stub\" build",
    "index:commands": "adonis-kit index build/commands",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "format": "prettier --write .",
    "quick:test": "node --import=./tsnode.esm.js --enable-source-maps bin/test.ts",
    "test": "c8 pnpm run quick:test",
    "prebuild": "pnpm run clean",
    "build": "tsc",
    "dev": "tsc --watch",
    "postbuild": "pnpm run copy:templates && pnpm run index:commands",
    "version": "pnpm run build"
  },
  "keywords": [
    "adonis",
    "adonisjs",
    "openapi",
    "oapi",
    "api",
    "typescript"
  ],
  "author": {
    "name": "Martin Paucot",
    "email": "contact@martin-paucot.fr"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/FriendsOfAdonis/FriendsOfAdonis",
    "directory": "packages/openapi"
  },
  "bugs": {
    "url": "https://github.com/FriendsOfAdonis/FriendsOfAdonis/issues"
  },
  "homepage": "https://friendsofadonis.com/docs/openapi",
  "license": "MIT",
  "devDependencies": {
    "@adonisjs/assembler": "^7.8.2",
    "@adonisjs/core": "^6.14.1",
    "@adonisjs/lucid": "^21.2.0",
    "@foadonis/eslint-config": "workspace:*",
    "@japa/assert": "^3.0.0",
    "@japa/expect-type": "^2.0.2",
    "@japa/file-system": "^2.3.0",
    "@japa/plugin-adonisjs": "^3.0.1",
    "@japa/runner": "^3.1.4",
    "@swc/core": "1.7.26",
    "@types/luxon": "^3.4.2",
    "@types/node": "^22.8.6",
    "@types/sinon": "^17.0.3",
    "@vinejs/vine": "^2.1.0",
    "c8": "^10.1.2",
    "copyfiles": "^2.4.1",
    "del-cli": "^5.1.0",
    "luxon": "^3.5.0",
    "openapi-types": "^12.1.3",
    "prettier": "^3.3.3",
    "reflect-metadata": "^0.2.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  },
  "peerDependencies": {
    "@adonisjs/core": "^6.2.0",
    "@adonisjs/lucid": "^21.2.0",
    "@vinejs/vine": "^2.1.0",
    "luxon": "^3.5.0"
  },
  "dependencies": {
    "openapi-metadata": "0.0.0-rc-4"
  },
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "c8": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  }
}
