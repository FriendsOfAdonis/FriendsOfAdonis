{
  "name": "friends-of-adonis",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "test": "turbo test",
    "typecheck": "turbo typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "play:graphql": "turbo dev --filter=playground-graphql...",
    "play:openapi": "turbo dev --filter=playground-openapi...",
    "play:actions": "turbo dev --filter=playground-actions...",
    "play:spark": "turbo dev --filter=playground-spark...",
    "automd": "automd"
  },
  "packageManager": "yarn@4.6.0",
  "engines": {
    "node": ">=18"
  },
  "resolutions": {
    "eslint-mdx": "3.2.0",
    "eslint-plugin-mdx": "3.2.0"
  },
  "manypkg": {
    "defaultBranch": "main"
  },
  "prettier": "@adonisjs/prettier-config",
  "devDependencies": {
    "@adonisjs/prettier-config": "^1.4.4",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.2",
    "@foadonis/typescript-config": "workspace:*",
    "@manypkg/cli": "^0.23.0",
    "automd": "^0.4.0",
    "eslint": "^9.25.1",
    "mdbox": "^0.1.1",
    "prettier": "^3.5.3",
    "turbo": "^2.5.1",
    "typescript": "^5.8.3"
  },
  "workspaces": [
    "docs",
    "playgrounds/*",
    "packages/*",
    "packages/spark/*",
    "tooling/*",
    "tooling/lucide/*"
  ],
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.2.0",
    "tw-animate-css": "^1.2.9"
  }
}
