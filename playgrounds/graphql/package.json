{
  "name": "playground-graphql",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "license": "UNLICENSED",
  "scripts": {
    "start": "node bin/server.js",
    "build": "node ace build",
    "dev": "node ace serve --hmr",
    "lint": "eslint .",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit"
  },
  "imports": {
    "#controllers/*": "./app/controllers/*.js",
    "#exceptions/*": "./app/exceptions/*.js",
    "#models/*": "./app/models/*.js",
    "#mails/*": "./app/mails/*.js",
    "#services/*": "./app/services/*.js",
    "#listeners/*": "./app/listeners/*.js",
    "#events/*": "./app/events/*.js",
    "#middleware/*": "./app/middleware/*.js",
    "#validators/*": "./app/validators/*.js",
    "#providers/*": "./providers/*.js",
    "#policies/*": "./app/policies/*.js",
    "#abilities/*": "./app/abilities/*.js",
    "#database/*": "./database/*.js",
    "#start/*": "./start/*.js",
    "#tests/*": "./tests/*.js",
    "#config/*": "./config/*.js",
    "#graphql/*": "./app/graphql/*.js"
  },
  "devDependencies": {
    "@adonisjs/assembler": "catalog:",
    "@foadonis/eslint-config": "workspace:*",
    "@japa/assert": "^4.2.0",
    "@japa/plugin-adonisjs": "catalog:",
    "@japa/runner": "^4.0.0",
    "@swc/core": "1.15.5",
    "@types/luxon": "^3.7.1",
    "@types/node": "catalog:",
    "hot-hook": "catalog:",
    "pino-pretty": "^13.1.3",
    "prettier": "catalog:",
    "ts-node-maintained": "^10.9.6",
    "typescript": "catalog:",
    "youch": "catalog:"
  },
  "dependencies": {
    "@adonisjs/auth": "catalog:",
    "@adonisjs/bouncer": "catalog:",
    "@adonisjs/core": "catalog:",
    "@adonisjs/cors": "catalog:",
    "@adonisjs/session": "catalog:",
    "@foadonis/graphql": "workspace:*",
    "@graphql-yoga/subscription": "^5.0.5",
    "better-sqlite3": "^12.5.0",
    "class-validator": "^0.14.3",
    "graphql": "^16.12.0",
    "graphql-scalars": "^1.25.0",
    "graphql-yoga": "^5.17.1",
    "luxon": "^3.7.2",
    "reflect-metadata": "^0.2.2",
    "type-graphql": "2.0.0-rc.2"
  },
  "hotHook": {
    "boundaries": [
      "./app/controllers/**/*.ts",
      "./app/middleware/*.ts",
      "./app/grpahql/resolvers/*.ts"
    ]
  }
}
